<UserControl x:Class="FreshBox.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreshBox.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1440" Background="#fff">

    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="Auto"/>
            <!-- Radio + Combo + Button -->
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Product registration"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,40"/>

        <!-- Input Fields -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Height="50" Margin="10" FontSize="14" VerticalContentAlignment="Center" />
            <TextBox Grid.Column="1" Height="50" Margin="10" FontSize="14" VerticalContentAlignment="Center" />
            <TextBox Grid.Column="2" Height="50" Margin="10" FontSize="14" VerticalContentAlignment="Center" />
        </Grid>

        <!-- RadioButtons + ComboBox + Register Button -->
        <Grid Grid.Row="2" Margin="10,40,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 라디오 버튼 세로 스택 -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10,0,50,0" VerticalAlignment="Center">
                <RadioButton Content="냉동" GroupName="Storage" Foreground="Black" Margin="0,5" IsChecked="True"/>
                <RadioButton Content="냉장" GroupName="Storage" Foreground="Black" Margin="0,5"/>
                <RadioButton Content="실온" GroupName="Storage" Foreground="Black" Margin="0,5"/>
            </StackPanel>

            <!-- 콤보박스 -->
            <ComboBox Background="#fff" Grid.Column="1" Width="250" Height="50" VerticalContentAlignment="Center" FontSize="14" Margin="0,0,50,0" VerticalAlignment="Center">
                <ComboBoxItem Content="과일"/>
                <ComboBoxItem Content="야채"/>
                <ComboBoxItem Content="음료"/>
            </ComboBox>

            <!-- 등록 버튼 -->
            <Button Grid.Column="2" Width="200" Height="50" Padding="30,0"
            Content="등록" FontSize="16" Foreground="White"
            Background="#A4E64F" FontWeight="Bold"
            BorderBrush="Transparent" Cursor="Hand" VerticalAlignment="Center"/>
        </Grid>

        <!-- Logo and Text -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,40,0,0">
            <Image Source="/Assets/Logo.png" Width="200" Height="200" Margin="0,0,0,10"/>
            <TextBlock Text="fresh box" FontSize="24" FontWeight="Bold" Foreground="#6FD944" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
