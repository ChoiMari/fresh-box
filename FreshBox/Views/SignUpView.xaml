<UserControl x:Class="FreshBox.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:FreshBox.Views"
             xmlns:vm="clr-namespace:FreshBox.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <!-- UserControl : 화면에 보이는 UI 조각(작은 화면 부품) 하나를 만드는 틀 -->
    <!-- DataContext : 이 UserControl에서 "사용할 데이터와 기능들이 있는 곳"을 연결하는 역할. 
            예를 들어, 뷰모델(화면 뒤에 데이터를 처리하는 클래스)이 어디인지 연결해주는 '배선' 같은 역할 -->
    <UserControl.DataContext>
        <!-- xmlns: vm 작성하기-->
        <!-- ViewModel 객체 생성 및 연결 -->
        <vm:SignUpViewModel/>
    </UserControl.DataContext>
    <Grid Background="White">
        <Label Content="회원가입" HorizontalAlignment="Left" Margin="462,33,0,0" VerticalAlignment="Top"/>
        <Label Content="아이디*" FontSize="25" HorizontalAlignment="Left" Margin="318,99,0,0" VerticalAlignment="Top"/>
        <!-- 사용자가 입력한 값을 뷰모델의 Username 속성과 연결 -->
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="462,103,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" MaxLength="12"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
            <!-- Username 속성을 바인딩 , UpdateSourceTrigger=PropertyChanged 한글자 입력할때마다 실시간으로 뷰모델의 Username속성에 값이 들어감
                생략 시 포커스를 잃을 때 한 번 반영, 설정 시 한 글자 입력할 때마다 바로 반영됨
                실시간 유효성 검사할 때 필수로 사용됨-->
        </TextBox>
        <TextBlock x:Name="UsernameValidationMessageTextBlock" HorizontalAlignment="Center" Margin="0,144,0,0" TextWrapping="Wrap" Text="{Binding UsernameValidationMessage}" VerticalAlignment="Top" Height="33" Width="278" />

        <!-- 비밀번호는 WPF에서 직접 바인딩이 안됨 -->
        <!-- hp:PasswordBoxBindingHelper.BoundPassword를 통해 ViewModel의 Pwd 속성과 양방향 바인딩 설정 -->
        <Label Content="비밀번호*" HorizontalAlignment="Left" Margin="340,190,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PwdBox" PasswordChanged="PwdBox_PasswordChanged" HorizontalAlignment="Left" Margin="462,194,0,0" VerticalAlignment="Top" Width="120" MaxLength="20" />
        <!-- 비밀번호 입력 유효성 메시지 영역 -->
        <TextBlock Text="{Binding PwdValidationMessage}" HorizontalAlignment="Left" Margin="346,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <Label Content="비밀번호 확인*" HorizontalAlignment="Left" Margin="340,250,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="ConfirmPwdBox" PasswordChanged="ConfirmPwdBox_PasswordChanged" HorizontalAlignment="Left" Margin="462,254,0,0" VerticalAlignment="Top" Width="120" MaxLength="20" />
        <!-- 비밀번호 확인 유효성 메시지 영역 -->
        <TextBlock Text="{Binding PwdConfirmValidationMessage}" HorizontalAlignment="Left" Margin="340,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <!-- 바인딩 시킬 때 UpdateSourceTrigger=PropertyChanged 필수!, 그래야 입력 시 마다 바로 바로 반영됨-->
        <Label Content="이름*" HorizontalAlignment="Left" Margin="340,305,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding MemberName, UpdateSourceTrigger=PropertyChanged}" MaxLength="10" HorizontalAlignment="Left" Margin="462,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding MemberNameValidationMessage}" HorizontalAlignment="Left" Margin="340,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <!--DatePicker의 SelectedDate와 바인딩하면, 사용자가 날짜를 선택할 때 자동으로 BirthDate에 값이 들어감(BirthDate가 바뀌면 DatePicker가 자동으로 업데이트, Mode=TwoWay 양방향 동기화) -->
        <Label Content="생년월일*" HorizontalAlignment="Left" Margin="340,367,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding BirthDateString, UpdateSourceTrigger=PropertyChanged}" MaxLength="8" HorizontalAlignment="Left" Margin="462,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding BirthDateValidationMessage}" HorizontalAlignment="Left" Margin="340,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <Label Content="휴대폰 번호*" HorizontalAlignment="Left" Margin="340,433,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" MaxLength="11" HorizontalAlignment="Left" Margin="462,437,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding PhoneNumValidationMessage}" HorizontalAlignment="Left" Margin="340,471,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <Label Content="이메일*" HorizontalAlignment="Left" Margin="340,500,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" MaxLength="80" HorizontalAlignment="Left" Margin="462,504,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding EmailValidationMessage}" HorizontalAlignment="Left" Margin="340,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <Label Content="입사일(선택)" HorizontalAlignment="Left" Margin="340,564,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding HireDateString, UpdateSourceTrigger=PropertyChanged}" MaxLength="8" HorizontalAlignment="Left" Margin="462,568,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Text="{Binding HireDateValidationMessage}" HorizontalAlignment="Left" Margin="340,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="29"/>

        <Button Content="회원가입" HorizontalAlignment="Left" Margin="380,633,0,0" VerticalAlignment="Top"/>
        <Button Content="취소" HorizontalAlignment="Left" Margin="500,633,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
