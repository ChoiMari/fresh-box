<UserControl x:Class="FreshBox.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreshBox.Views"
             xmlns:vm="clr-namespace:FreshBox.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- UserControl : 화면에 보이는 UI 조각(작은 화면 부품) 하나를 만드는 틀 -->
    <!-- DataContext : 이 UserControl에서 "사용할 데이터와 기능들이 있는 곳"을 연결하는 역할. 
            예를 들어, 뷰모델(화면 뒤에 데이터를 처리하는 클래스)이 어디인지 연결해주는 '배선' 같은 역할 -->
    <UserControl.DataContext>
        <!-- xmlns: vm 작성하기-->
        <!-- ViewModel 객체 생성 및 연결 -->
        <vm:MemberViewModel />
    </UserControl.DataContext>
    <Grid Background="White">
        <Label Content="ID" FontSize="25" HorizontalAlignment="Left" Margin="45,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Left" Margin="112,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" Height="34"/>
        <TextBlock x:Name="textBlockDuplicateCheckResult" HorizontalAlignment="Left" Margin="52,110,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="25" Width="383"/>
    </Grid>
</UserControl>
